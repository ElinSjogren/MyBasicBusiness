@using Microsoft.IdentityModel
@model List<Product>

<h1 class="text-primary">Our products</h1>
<p>Our long wisedom of how products look, behave and smells like make us the best and most beutiful product makers.</p>
@if (User.Identity.IsAuthenticated)
{
    
    <a class="btn btn-light mb-2" asp-controller="Product" asp-action="AddProduct">Add new <i class="bi bi-journal-plus "></i></a>


}

<table class="table table-hover rounded">
    <thead class="table-primary">
        <tr >
            <th>Product</th>
            <th>Price<i class="bi bi-currency-dollar"></i></th>
            <th>Category<i class="bi bi-currency-dollar"></i></th>
            <th class="text-center">~ <i class="bi bi-gear-fill"></i> ~</th>
        </tr>
    </thead>
    <tbody>
        <!--List all products here-->
        @foreach(Product product in Model)
        {
            <tr class="text-primary ">
                <td>@product.Name</td>
                <td>@product.Price $ </td>
                <td>@product.CategoryId</td>
                <td class="text-center">
                    <div class="btn-group ">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <a class="btn btn-warning m-1" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.Id" ><i class="bi bi-trash"></i></a>
                        <a class="btn btn-light m-1" asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.Id" ><i class="bi bi-pen"></i></a>
                        }
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>